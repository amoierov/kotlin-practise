<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/uiFragment">

    <fragment
        android:id="@+id/uiFragment"
        android:name="com.example.kotlin_practise.fragments.UiFragment"
        android:label="Main Fragment">
        <action
            android:id="@+id/action_uiFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.kotlin_practise.fragments.SecondFragment"
        android:label="Second Fragment">
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.kotlin_practise.fragments.ThirdFragment"
        android:label="Third Fragment">
        <action
            android:id="@+id/action_thirdFragment_to_cardListFragment"
            app:destination="@id/cardListFragment" />
    </fragment>

    <fragment
        android:id="@+id/cardListFragment"
        android:name="com.example.kotlin_practise.fragments.CardListFragment"
        android:label="CardListFragment">
        <action
            android:id="@+id/action_cardListFragment_to_fileListFragment"
            app:destination="@id/fileListFragment" />
    </fragment>
    <fragment
        android:id="@+id/fileListFragment"
        android:name="com.example.kotlin_practise.fragments.FileListFragment"
        android:label="FileListFragment">
        <action
            android:id="@+id/action_fileListFragment_to_dublicateModelFragment"
            app:destination="@id/dublicateModelFragment" />
    </fragment>
    <fragment
        android:id="@+id/dublicateModelFragment"
        android:name="com.example.kotlin_practise.fragments.DublicateModelFragment"
        android:label="DublicateModelFragment">
        <action
            android:id="@+id/action_dublicateModelFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.example.kotlin_practise.fragments.InputFragment"
        android:label="InputFragment">
        <action
            android:id="@+id/action_inputFragment_to_traineeListFragment"
            app:destination="@id/traineeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/traineeListFragment"
        android:name="com.example.kotlin_practise.fragments.TraineeListFragment"
        android:label="TraineeListFragment">
        <action
            android:id="@+id/action_traineeListFragment_to_threadFragment"
            app:destination="@id/threadFragment" />
    </fragment>
    <fragment
        android:id="@+id/threadFragment"
        android:name="com.example.kotlin_practise.fragments.ThreadFragment"
        android:label="ThreadFragment">

    </fragment>

</navigation>
