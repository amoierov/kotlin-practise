<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/app_width"
    android:layout_height="@dimen/app_height" >

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="top"
        android:text="@string/user_name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarImageView" />
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:fontFamily="@font/roboto_regular"
        android:gravity="top"
        android:text="@string/mail"
        android:textSize="@dimen/text_size_16_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarImageView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/some_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/some_image"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_card_view_vertical"
                android:layout_marginEnd="13dp"
                android:background="@drawable/image"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/text_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_card_view_horizontal"
                android:layout_marginTop="@dimen/margin_card_view_vertical"
                android:layout_marginEnd="@dimen/margin_card_view_horizontal"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/text"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/some_image"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/margin_card_view_horizontal"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/sign"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/inscription"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/some_text_tag"
        android:layout_width="142dp"
        android:layout_height="19dp"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="top"
        android:text="@string/tags"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/some_card" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonToSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/some_text_tag"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_default="spread" />
    <Button
        android:id="@+id/buttonToSecond"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_purple"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/buttonExit"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_red"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonToSecond" />


</androidx.constraintlayout.widget.ConstraintLayout>


